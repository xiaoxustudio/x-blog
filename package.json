{
	"name": "x-blog",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"license": "MIT",
	"author": "xuran",
	"description": "A blog system based on GoFrame and React",
	"homepage": "https://github.com/xiaoxustudio/x-blog",
	"engines": {
		"node": ">=18.0.0"
	},
	"bugs": {
		"url": "https://github.com/xiaoxustudio/x-blog/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/xiaoxustudio/x-blog"
	},
	"scripts": {
		"dev": "concurrently \"pnpm run dev:bk\" \"pnpm run dev:frontend\"",
		"bk": "cd backend && ",
		"bk:dao": "pnpm bk gf gen dao",
		"bk:clean": "pnpm bk go clean -modcache",
		"bk:tidy": "pnpm bk go mod tidy",
		"dev:bk": "cd backend && gf run main.go",
		"dev:frontend": "vite",
		"build": "tsc -b && vite build",
		"lint": "eslint .",
		"format": "prettier --write . --plugin \"prettier-plugin-tailwindcss\"",
		"preview": "vite preview",
		"add:comp": "pnpm dlx radix-ui@latest add"
	},
	"dependencies": {
		"@hookform/resolvers": "^5.2.2",
		"@radix-ui/themes": "^3.2.1",
		"@tailwindcss/vite": "^4.1.17",
		"@tiptap/extension-character-count": "^3.13.0",
		"@tiptap/markdown": "^3.13.0",
		"@tiptap/react": "^3.13.0",
		"@tiptap/starter-kit": "^3.13.0",
		"ahooks": "^3.9.6",
		"axios": "^1.13.2",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-react": "^0.555.0",
		"next-themes": "^0.4.6",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"react-hook-form": "^7.68.0",
		"react-router": "^7.10.1",
		"sonner": "^2.0.7",
		"tailwind-merge": "^3.4.0",
		"tailwindcss": "^4.1.17",
		"zod": "^4.1.13",
		"zustand": "^5.0.8"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.1",
		"@types/node": "^24.10.1",
		"@types/react": "^19.2.5",
		"@types/react-dom": "^19.2.3",
		"@vitejs/plugin-react": "^5.1.1",
		"concurrently": "^9.2.1",
		"eslint": "^9.39.1",
		"eslint-plugin-react-hooks": "^7.0.1",
		"eslint-plugin-react-refresh": "^0.4.24",
		"globals": "^16.5.0",
		"prettier": "^3.7.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"tw-animate-css": "^1.4.0",
		"typescript": "~5.9.3",
		"typescript-eslint": "^8.46.4",
		"vite": "^7.2.4"
	}
}
